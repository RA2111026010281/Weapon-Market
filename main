  static void usashotguns()
  {
      int x,c;
       System.out.println("Welcome to U.S.A's shotgun collection");
       System.out.println("Each shotgun cost's Rs. 10000");
       System.out.println("1.M500\n2.M590\n3.M26 modular shotgun(accessory)");
       System.out.println("Type the number that indicates your choice of assault rifle 1/2/3");
       x=sc.nextInt();
       switch(x)
       {
           case 1 :System.out.println("You chose M500");
                   System.out.println("Enter number of shotguns you would like to buy");
                    c=sc.nextInt();
                   bill=bill+(c*10000);
                   break;
          case 2 :System.out.println("You chose M590");
                  System.out.println("Enter number of shotguns you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*10000);
                  break;         
         case 3 :System.out.println("You chose M26 modular shotgun(accessory)");
                   System.out.println("Enter number of shotguns you would like to buy");
                    c=sc.nextInt();
                   bill=bill+(c*10000);
                   break;
        default :System.out.println("Wrong choice");   
    } 
    }
   
