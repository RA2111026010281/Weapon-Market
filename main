                  break;
          case 5 :System.out.println("You chose SA-14 Gremlin");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 6 :System.out.println("You chose GP-25");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 7 :System.out.println("You chose SA-18 Grouse");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 8 :System.out.println("You chose RPG-22");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 9 :System.out.println("You chose RPG-26");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 10 :System.out.println("You chose RPO-A 'Shmel'");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 11 :System.out.println("You chose GP-30");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 12 :System.out.println("You chose AT-14 Spriggan");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 13 :System.out.println("You chose AGS-30");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
        default :System.out.println("Wrong choice");   
    } 
}
static void   francelaunchers()
{
    int x,c;
       System.out.println("Welcome to France's launcher collection");
       System.out.println("Each launcher cost's Rs. 30000");
       System.out.println("1.AT4 CS\n2.MILAN\n3.FGM-148 Javelin\n4.ERYX\n5.MMP/n6.LGI Mle F1 (Lance-grenade individuel Mle F1)\n7.Heckler & Koch AG36\n8.M203 grenade launcher");
       System.out.println("Type the number that indicates your choice of shotgun 1/2/3/4/5/6/7/8");
       x=sc.nextInt();
       switch(x)
       {
           case 1 :System.out.println("You chose AT4 CS");
                   System.out.println("Enter number of launchers you would like to buy");
                    c=sc.nextInt();
                   bill=bill+(c*30000);
                   break;
          case 2 :System.out.println("You chose MILAN");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 3 :System.out.println("You chose FGM-148 Javelin");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 4 :System.out.println("You chose ERYX");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 5 :System.out.println("You chose MMP");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 6 :System.out.println("You chose LGI Mle F1 (Lance-grenade individuel Mle F1)");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 7 :System.out.println("You chose Heckler & Koch AG36");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
          case 8 :System.out.println("You chose M203 grenade launcher");
                  System.out.println("Enter number of launchers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*30000);
                  break;
        default :System.out.println("Wrong choice");   
    } 
