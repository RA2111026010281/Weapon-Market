static void   usasnipers()
{
    int x,c;
       System.out.println("Welcome to U.S.A's sniper collection");
       System.out.println("Each sniper cost's Rs. 25000");
       System.out.println("1.M110 semi-automatic sniper system\n2.M2010 enhanced sniper rifle\n3.M107 long-range sniper rifle");
       System.out.println("Type the number that indicates your choice of launcher 1/2/3");
       x=sc.nextInt();
       switch(x)
       {
           case 1 :System.out.println("You chose M110 semi-automatic sniper system");
                   System.out.println("Enter number of snipers you would like to buy");
                    c=sc.nextInt();
                   bill=bill+(c*25000);
                   break;
          case 2 :System.out.println("You chose M2010 enhanced sniper rifle");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 3 :System.out.println("You chose M107 long-range sniper rifle");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
        default :System.out.println("Wrong choice");   
    } 
}

static void   russiasnipers()
{
    int x,c;
       System.out.println("Welcome to Russia's sniper collection");
       System.out.println("Each sniper cost's Rs. 25000");
       System.out.println("1.SVD Dragunov\n2.VSS Vintorez\n3.KSVK 12.7\n4.SVU Dragunov\n5.SV-98\n6.TRG-22\n7.Accuracy International AW\n8.Heckler & Koch MR 762\n9.VSSK Vychlop");
       System.out.println("Type the number that indicates your choice of launcher 1/2/3/4/5/6/7/8/9");
       x=sc.nextInt();
       switch(x)
       {
           case 1 :System.out.println("You chose SVD Dragunov");
                   System.out.println("Enter number of snipers you would like to buy");
                    c=sc.nextInt();
                   bill=bill+(c*25000);
                   break;
          case 2 :System.out.println("You chose VSS Vintorez");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 3 :System.out.println("You chose KSVK 12.7");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 4 :System.out.println("You chose SVU Dragunov");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 5 :System.out.println("You chose SV-98");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 6 :System.out.println("You chose TRG-22");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 7 :System.out.println("You chose Accuracy International AW");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 8 :System.out.println("You chose Heckler & Koch MR 762");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 9 :System.out.println("You chose VSSK Vychlop");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
        default :System.out.println("Wrong choice");   
    } 
}
static void   francesnipers()
{
    int x,c;
       System.out.println("Welcome to France's sniper collection");
       System.out.println("Each sniper cost's Rs. 25000");
       System.out.println("1.FR-F2\n2.PGM Ultima Ratio\n3.HK MSG90\n4.HK 417\n5.PGM Hcate II");
       System.out.println("Type the number that indicates your choice of launcher 1/2/3/4/5");
       x=sc.nextInt();
       switch(x)
       {
           case 1 :System.out.println("You chose FR-F2");
                   System.out.println("Enter number of snipers you would like to buy");
                    c=sc.nextInt();
                   bill=bill+(c*25000);
                   break;
          case 2 :System.out.println("You chose PGM Ultima Ratio");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 3 :System.out.println("You chose HK MSG90");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 4 :System.out.println("You chose HK 417");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
          case 5 :System.out.println("You chose PGM Hcate II");
                  System.out.println("Enter number of snipers you would like to buy");
                   c=sc.nextInt();
                  bill=bill+(c*25000);
                  break;
        default :System.out.println("Wrong choice");   
    } 
}
